<div class="container">
    <div class="form-group">
        <h1>Post list</h1>
        
        <div class="text-right">
            <a href="/post/new" class="btn btn-outline-primary"> 글 쓰기 </a>
        </div>
    </div>

    <div class="form-group row">
        <% @posts.reverse.each do |post| %>
            <div class="col-6">
                <div class="card">
                    <div class="card-body">
                        <%= post.id %> 번째 글
                        <h4 class="card-title"><%=post.title %></h4>
                        <h6 class="card-subtitle mb-2 text-muted"><%= post.updated_at %></h6>
                        
                        <div class="text-right">
                            <a href="/post/show/<%= post.id %>" class="btn btn-outline-primary btn-sm"> 상세보기 </a>
                        </div>
                    </div>
                </div> 
                <div class="form-group"></div>
            </div>
        <% end %>
    </div>
</div>