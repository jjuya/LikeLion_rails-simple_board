<div class="container">
    <div class="form-group">
        <h1>Post write</h1>
    </div>
    
    <div class="form-group">
        <form action="/post/create">
            <div class="form-group row">
                <div class="col-3">
                    <label for="p_title">제목</label>
                </div>
                
                <div class="col-9">
                    <input type="text" class="form-control" name="p_title">
                </div>
            </div>
    
            <div class="form-group row">
                <div class="col-3">
                    <label for="q_content">내용</label>
                </div>
                <div class="col-9">
                    <textarea class="form-control" name='p_content' rows="3"></textarea>
                </div>
            </div>
            
            <div class="text-right">
                <button type="submit" class="btn btn-outline-primary">글쓰기</button>
            </div>
        </form>
    </div>
</div>