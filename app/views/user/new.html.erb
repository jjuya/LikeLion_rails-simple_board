<div class="container">
    <div class="form-group">
        <h1>Join User</h1>
    </div>
    
    <div class="form-group">
        <form action="/user/create">
            <div class="form-group row">
                <div class="col-3">
                    <label for="p_title">이메일</label>
                </div>
                
                <div class="col-9">
                    <input type="email" class="form-control" name="u_email" placeholder="example@example.com">
                </div>
            </div>
    
            <div class="form-group row">
                <div class="col-3">
                    <label for="q_content">비밀번호</label>
                </div>
                <div class="col-9">
                    <input type="password" class="form-control" name='u_password' rows="3">
                </div>
            </div>
            
            <div class="text-right">
                <button type="submit" class="btn btn-outline-primary">가입</button>
            </div>
        </form>
    </div>
</div>